generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  pin       String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  address   String
  name      String     @unique
  phone     String
  role      UserRole
  companyId String?
  ordersId  String?
  status    UserStatus @default(ACTIVE)
  Company   Company?   @relation(fields: [companyId], references: [id])
  Orders    Orders?    @relation(fields: [ordersId], references: [id])
}

model Company {
  id        String   @id @default(cuid())
  name      String   @unique
  email     String   @unique
  phone     String
  address   String
  logo      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tables    Tables[]
  users     User[]
}

model Tables {
  id        String   @id @default(cuid())
  number    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  companyId String?
  ordersId  String?
  Company   Company? @relation(fields: [companyId], references: [id])
  Orders    Orders?  @relation(fields: [ordersId], references: [id])
}

model Orders {
  id        String     @id @default(cuid())
  price     Float
  nif       String
  tax       String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  products  Products[]
  tables    Tables[]
  users     User[]
}

model Products {
  id        String          @id @default(cuid())
  name      String
  price     Float
  image     String
  tax       Tax
  discount  Int?            @default(0)
  category  ProductCategory
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  ordersId  String?
  Orders    Orders?         @relation(fields: [ordersId], references: [id])
}

enum ProductCategory {
  DRINK
  FOOD
  DESSERT
}

enum Tax {
  REDUCED // Taxa reduzida, geralmente 6%
  INTERMEDIATE // Taxa interm√©dia, geralmente 13%
  STANDARD // Taxa normal, geralmente 23%
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}
